{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"rootDir": "./src",
		"baseUrl": "./",
		"types": [
			"node"
		],
		"typeRoots": [
			"./src/types",
			"./node_modules/@types"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}